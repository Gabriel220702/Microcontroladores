#include <16F877A.h>
#fuses XT, NOWDT, NOPROTECT, NOBROWNOUT, NOLVP
#use delay(clock=4000000)

// Definición de pines para switches y LEDs
#define SW1 PIN_B0
#define SW2 PIN_B1
#define SW3 PIN_B2
#define SW4 PIN_B3

#define LED1 PIN_D0
#define LED2 PIN_D1
#define LED3 PIN_D2
#define LED4 PIN_D3

void main() {
   // Configuración de puertos
   set_tris_b(0x0F); // RB0-RB3 como entradas (switches)
   set_tris_d(0x00); // RD0-RD3 como salidas (LEDs)

   // Inicialización
   output_d(0x00);   // Apagar todos los LEDs inicialmente

   while (1) {
      if (!input(SW1)) {
         output_high(LED1); // Encender LED1 al presionar SW1
      } else {
         output_low(LED1);  // Apagar LED1 al soltar SW1
      }

      if (!input(SW2)) {
         output_high(LED2); // Encender LED2 al presionar SW2
      } else {
         output_low(LED2);  // Apagar LED2 al soltar SW2
      }

      if (!input(SW3)) {
         output_high(LED3); // Encender LED3 al presionar SW3
      } else {
         output_low(LED3);  // Apagar LED3 al soltar SW3
      }

      if (!input(SW4)) {
         output_high(LED4); // Encender LED4 al presionar SW4
      } else {
         output_low(LED4);  // Apagar LED4 al soltar SW4
      }
   }
}


