#include <18F4550.h>
#fuses HS, NOWDT, NOPROTECT, NOLVP
#use delay(clock=4MHz)

#define SSR_LED_PIN PIN_B0
#define BUTTON_PIN PIN_B1  // Definimos el pin del botón

void main() {
    set_tris_b(0x02); // Configura PIN_B0 como salida y PIN_B1 como entrada (0x02 en binario es 00000010)
    
    while(TRUE) {
        if(input(BUTTON_PIN)) { // Verifica si el botón está presionado (asumiendo un estado alto cuando se presiona)
            output_high(SSR_LED_PIN); // Enciende el LED y activa el SSR
        } else {
            output_low(SSR_LED_PIN); // Apaga el LED y desactiva el SSR
        }
        // No hay necesidad de delay aquí, la acción depende del estado del botón.
    }
}

