#include <18F4550.h>
#fuses XT, NOWDT, NOPROTECT, NOLVP
#use delay(clock=4000000)

#define SSR_LED_PIN PIN_B0
#define Palanca_PIN PIN_B1

void main() {
    set_tris_b(0x01); // Configura el pin B0 como salida y B1 como entrada para la palanca

    while(TRUE) {
        if(input(Palanca_PIN)) {
            delay_ms(200); // Anti-Debounce
            while(input(Palanca_PIN)) {
                output_high(SSR_LED_PIN); // Enciende el LED y activa el SSR
                delay_ms(1000); // Espera 1 segundo
                output_low(SSR_LED_PIN); // Apaga el LED y desactiva el SSR
                delay_ms(1000); // Espera 1 segundo
            }
        }
    }
}

